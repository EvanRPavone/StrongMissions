<div class="card">
  <div class="card-header">
    <h1>Sign Up</h1>
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="field form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:'Enter an email' %>
      </div>

      <div class="field form-group">
        <%= f.password_field :password, autocomplete: "new-password", class:'form-control', placeholder: 'Enter a password'%>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
      </div>

      <div class="field form-group">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'form-control', placeholder: 'Confirm your password'%>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class:'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>

<%= render "users/shared/links" %>
