<div class="card">
  <div class="card-header">
    <h2><%= @comment.user.email%></h2>
  </div>
  <div class="card-body">
    <p><%= @comment.content%></p>
  </div>
</div>
<br/>

<% if @comment.user == current_user %>
  <%= link_to "Edit Comment", edit_comment_path(@comment), class:'btn btn-secondary'%>
<% end %>

<%= link_to 'Back', post_path(@comment.post_id), class:'btn btn-secondary' %>